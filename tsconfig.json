{
  "compilerOptions": {
      "noEmit": true, // Don't emit; allow Babel to transform files.
      "outDir": "./dist/",
      "baseUrl": ".",
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "allowJs": true,
      "module": "commonjs",
      "target": "es5",
      "lib": ["ES2020", "DOM"],
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["lib/**/*", "./index.ts", "./scripts/*"]
}
